{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "node",
    "noEmit": false,
    "verbatimModuleSyntax": false
  },
  "include": ["src/**/*", "**/*.test.ts", "**/*.spec.ts"],
  "exclude": ["node_modules", "dist", "build"]
}
